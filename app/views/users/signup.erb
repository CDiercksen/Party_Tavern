
<% if @user && @user.errors %>
    <h3 class="error"><%= @user.errors.full_messages.to_sentence  %></h3>
<% end %>

<h1>Signup for our site!</h1>

<form method="POST" action="/users"> <!--standard signup form-->
    Name: <input type="text" name="name"><br />
    Username: <input type="text" name="username"><br />
    Password: <input type="password" name="password"><br />
    <input type="submit">
</form>